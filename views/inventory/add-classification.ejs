<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <%}%>

    <form class="addForm" action="/inv/addClass" method="post">
        <label for="classification_name">Classification Name</label><br>
        <input type="text" id="classification_name" name="classification_name" required pattern="[A-Za-z0-9]{1,25}"><br>
        <p>Classification name cannot contain spaces or special characters of any kind.</p><br>
        <input type="submit" value="Add Classification">
    </form>