<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <%}%>
    <div>
        <form class="addForm" action="/inv/addVehi" method="post">
            <label for="classification_id">Vehicle Classification</label><br>
            <select id="classification_id" name="classification_id" required>
                <option value="">Select a classification</option>
                <% if (typeof classifications != 'undefined') {
                    classifications.rows.forEach(function(classification) { %>
                        <option value="<%= classification.classification_id %>"
                            <% if (locals.classification_id != null && classification.classification_id == locals.classification_id) {%>
                                selected <%}%>>
                                <%= classification.classification_name %></option>
                        <% }) %>
                    <% }else { %>
                        <option value="">No classifications available</option>
                    <% } %>
            </select><br>
            <label for="inv_make">Vehicle Make</label><br>
            <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make %>"><br>
            <label for="inv_model">Vehicle Model</label><br>
            <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>"><br>
            <label for="inv_description">Vehicle Description</label><br>
            <input type="text" id="inv_description" name="inv_description" required value="<%= locals.inv_description %>"><br>
            <label for="inv_image">Image Path</label><br>
            <input type="text" id="inv_image" name="inv_image" required value="<%= locals.inv_image %>"><br>
            <label for="inv_thumbnail">Thumbnail Path</label><br>
            <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= locals.inv_thumbnail %>"><br>
            <label for="inv_price">Vehicle Price</label><br>
            <input type="text" id="inv_price" name="inv_price" required value="<%= locals.inv_price %>"><br>
            <label for="inv_year">Vehicle Year</label><br>
            <input type="text" id="inv_year" name="inv_year" required value="<%= locals.inv_year %>"><br>
            <label for="inv_miles">Miles</label><br>
            <input type="text" id="inv_miles" name="inv_miles" required value="<%= locals.inv_miles %>"><br>
            <label for="inv_color">Vehicle Color</label><br>
            <input type="text" id="inv_color" name="inv_color" required value="<%= locals.inv_color %>"><br>
            <input type="submit" value="Add Vehicle">
    </div>